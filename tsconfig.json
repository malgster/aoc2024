{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodeNext",
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }
}